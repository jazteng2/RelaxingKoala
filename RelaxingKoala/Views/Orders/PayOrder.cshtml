@model RelaxingKoala.Models.ViewModels.PaymentViewModel
@{
    ViewData["Title"] = "Pay Order";
}

<h2>@ViewData["Title"]</h2>
<form asp-controller="Orders" asp-action="PayOrder" method="post">
    <div class="form-group">
        <input asp-for="Order" class="form-control" type="hidden" value="@Model.Order" />
        <label asp-for="PaymentMethod" class="control-label">Payment Method</label>
        <select asp-for="PaymentMethod" class="form-control" required>
            <option value="Cash">Cash</option>
            <option value="Card">Card</option>
            <option value="Digital">Digital</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="GivenPay" class="control-label">Given Amount</label>
        <input asp-for="GivenPay" class="form-control" type="number" step="0.01" required />
    </div>
    <button type="submit" class="btn btn-primary">Submit Payment</button>
</form>
<div>
    <a asp-action="MyOrders">Back to List</a>
</div>
