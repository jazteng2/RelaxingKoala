@model RelaxingKoala.Models.OrderModel

<h2>Step 2: Select Order Type</h2>

<form asp-action="SelectOrderTypeStep2" method="post">
    <div class="form-group">
        <label>Select Order Type:</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="OrderType" value="DineIn" />
            <label class="form-check-label">Dine-In</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="OrderType" value="TakeAway" />
            <label class="form-check-label">Takeaway</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="OrderType" value="Delivery" />
            <label class="form-check-label">Delivery</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Next</button>
</form>
