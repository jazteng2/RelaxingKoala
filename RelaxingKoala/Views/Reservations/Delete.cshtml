@model RelaxingKoala.Models.Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<h2>Delete Reservation</h2>

<h3>Are you sure you want to delete this reservation?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Reserved Date
        </dt>
        <dd class="col-sm-10">
            @Model.ReservedDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Model.EndTime
        </dd>
        <dt class="col-sm-2">
            Number of People
        </dt>
        <dd class="col-sm-10">
            @Model.NumberOfPeople
        </dd>
        <dt class="col-sm-2">
            Tables
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.Tables)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="MyReservations" class="btn btn-secondary">Cancel</a>
    </form>
</div>
